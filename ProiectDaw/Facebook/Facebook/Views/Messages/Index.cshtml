@model System.Collections.Generic.IEnumerable<Facebook.Models.Message>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h4>Message</h4>
    <hr />
    @for(int i = 0;i<Model.Count();i++)
    {
        
        
        <dl class="dl-horizontal border">
            <dt>@Html.DisplayFor(model => model.ElementAt(i).Owner.UserDetails.Firstname):</dt>

            <dd>
                @Html.DisplayFor(model => model.ElementAt(i).Content)
            </dd>
            <dd>
                <a href="@Url.Action("Create", "Messages", new { Id = Model.ElementAt(i).Owner.Id})"
                   class="btn btn-outline-secondary">Respond</a></dd>
                </dl>
        
    }
</div>
    