@model Facebook.Models.Friendship
@{
    ViewBag.Title = "Friends";
}

<h2>Friend Requests</h2>
@foreach (var request in ViewBag.requests)
{
    <form method="post" action="@Url.Action("AcceptRequest","Users",new { id = request.Id })">
        @Html.HttpMethodOverride(HttpVerbs.Put)
        <div class="panel-heading">
            <i class="glyphicon glyphicon-user"></i>@request.User1.UserDetails.Firstname @request.User1.UserDetails.Lastname
            <button type="submit" class="btn btn-outline-secondary">Accept Request</button>
        </div>
    </form>
}
<h2>Friends</h2>
@foreach (var friend in ViewBag.friends1)
{
    <div class="panel-heading">
        <i class="glyphicon glyphicon-user"></i>
        <a class="btn btn-outline-secondary" href="PersonalPage/@friend.User1.Id">@friend.User1.UserDetails.Firstname @friend.User1.UserDetails.Lastname</a>
    </div>
}
@foreach (var friend in ViewBag.friends2)
{
    <div class="panel-heading">
        <i class="glyphicon glyphicon-user"></i>
        <a class="btn btn-outline-secondary" href="PersonalPage/@friend.User2.Id">@friend.User2.UserDetails.Firstname @friend.User2.UserDetails.Lastname</a>
    </div>
}

